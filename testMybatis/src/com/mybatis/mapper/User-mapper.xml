<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mapper.UserDao">

	<resultMap id="UserMap" type="com.mybatis.dto.User">
		<id column="user_id" property="id" />
		<result column="user_name" property="name" />
		<result column="user_password" property="password"/>
		<result column="user_sex" property="sex"  />
	</resultMap>

	<!-- 新增记录 -->
	<insert id="insertUser" parameterType="User" useGeneratedKeys="true"
		keyProperty="id">
		insert into t_user(name,password,sex)
		values(#{name},#{password},#{sex})
	</insert>
	<!-- 查询单条记录 -->
	<select id="selectUser" parameterType="Long" resultMap="UserMap">
		select *
		from t_user where id = #{id}
	</select>

</mapper>  
